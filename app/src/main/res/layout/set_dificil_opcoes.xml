<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetDificilOpcoes">

    <ImageButton
        android:id="@+id/btnVoltarmenuDificil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="center"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toTopOf="@+id/textDificil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textDificil"
        android:layout_width="384dp"
        android:layout_height="44dp"
        android:layout_marginTop="56dp"
        android:text="Escolha uma das cores abaixo"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/meninaEscolheCor"
        android:layout_width="270dp"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDificil"
        app:srcCompat="@drawable/menina_escolhe_cor" />

    <ImageView
        android:id="@+id/btnAmareloVerde"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meninaEscolheCor"
        app:srcCompat="@drawable/cor1_terciario_amarelo_verde" />

    <ImageView
        android:id="@+id/btnAmareloLaranja"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnVermelhoLaranja"
        app:layout_constraintStart_toEndOf="@+id/btnAmareloVerde"
        app:layout_constraintTop_toBottomOf="@+id/meninaEscolheCor"
        app:srcCompat="@drawable/cor2_terciario_amarelo_laranja" />

    <ImageView
        android:id="@+id/btnVermelhoLaranja"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meninaEscolheCor"
        app:srcCompat="@drawable/cor3_terciario_vermelho_laranja" />

    <ImageView
        android:id="@+id/btnAzulVerde"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAmareloVerde"
        app:srcCompat="@drawable/cor4_terciario_azul_verde" />

    <ImageView
        android:id="@+id/btnAzulVioleta"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnVermelhoVioleta"
        app:layout_constraintStart_toEndOf="@+id/btnAzulVerde"
        app:layout_constraintTop_toBottomOf="@+id/btnAmareloLaranja"
        app:srcCompat="@drawable/cor5_terciario_azul_violeta" />

    <ImageView
        android:id="@+id/btnVermelhoVioleta"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVermelhoLaranja"
        app:srcCompat="@drawable/cor6_terciario_vermelho_violeta" />

</androidx.constraintlayout.widget.ConstraintLayout>